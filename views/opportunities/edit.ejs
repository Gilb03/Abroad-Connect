<% include ../partials/header %>

<h1 style="text-align: center;">Edit the Opportunity!</h1>
<div class="container">
    <div class="row">
        <div style="width: 30%; margin: 25px auto;">
<form action= "/opportunities/<%= opportunity._id %>?_method=PUT" method="POST">
    <div class="form-group">
<input class="form-control"type="text" name="opportunity[name]" value="<%= opportunity.name %>">
</div>
<div class="form-group">
    <input class="form-control"type="text" name="opportunity[image]" value="<%= opportunity.image %>">
</div>
<div class="form-group">
        <input class="form-control"type="text" name="opportunity[link]" value="<%= opportunity.link %>">
</div>
<div class ="form-group">
    <input class="form-control"type="text" name="opportunity[description]" value="<%= opportunity.description %>">
    </div>
    <div class="form-group">
        <input class="form-control" type="number" name="opportunity[price]" value="<%= opportunity.price %>" min="0.01" step="0.01">
    </div>
<div class="form-group">
    <button class="btn btn-lg btn-default btn-block btn-primary">Submit!</button>
</div>
</form>
<a href="/opportunities">Go Back</a>
    </div>
</div>
</div>
<% include ../partials/footer %>
